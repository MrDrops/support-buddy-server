<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Activity</th>
      <th>Age</th>
      <th>Mobility</th>
      <th>Friends</th>
      <th>Equipment</th>
      <th>Location</th>
      <th>Action tframe</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.category %></td>
        <td><%= activity.activity %></td>
        <td><%= activity.age %></td>
        <td><%= activity.mobility %></td>
        <td><%= activity.friends %></td>
        <td><%= activity.equipment %></td>
        <td><%= activity.location %></td>
        <td><%= activity.time_todo %></td>
        <td><%= activity.info %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>
